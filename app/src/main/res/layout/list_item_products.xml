<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="30dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true" >

    <RelativeLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requirements"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/category1"
            android:text="Created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/category2"
            android:text="Proposed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/category1"
            android:layout_alignBaseline="@+id/category1"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/category3"
            android:text="Approved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/category2"
            android:layout_alignBaseline="@+id/category1"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:padding="5dp"
            android:src="@drawable/ic_chart"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/hidden_actions"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/option3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.86"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="ROI"/>

            <TextView
                android:id="@+id/option2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Discount"/>

            <TextView
                android:id="@+id/option1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Move Inventory"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


